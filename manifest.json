{
  "manifest_version": 2,
  "name": "Tab Unloader",
  "version": "2.2",
  "description": "Unload tabs, save sessions, and manage memory with advanced controls.",
  "author": "Noobmaster",
  "homepage_url": "https://github.com/hehehe",

  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "alarms"
  ],
  
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Tab Unloader",
    "default_icon": "icons/icon.svg"
  },

  "icons": {
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  
  "commands": {
    "unload-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Unload current tab"
    },
    "unload-all-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Unload all tabs except active"
    }
  }
}